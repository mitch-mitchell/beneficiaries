---
import { Astro } from 'astro';
import DefaultLayout from "@/layouts/DefaultLayout.astro";

const { params } = Astro;
const accountId = params.id;

// TODO: Replace with real data fetch
const accountData = {
  id: accountId,
  name: 'Sample Account',
  type: 'IRA',
  status: 'Complete',
  beneficiaries: [
    { name: 'Alice Smith', relationship: 'Spouse', percentage: '100', type: 'Primary' }
  ]
};
---

<DefaultLayout>
  <section class="px-6 py-12 max-w-2xl mx-auto">
    <h1 class="text-3xl font-semibold mb-4">{accountData.name}</h1>
    <p class="text-gray-700 mb-2">Type: {accountData.type}</p>
    <p class="text-gray-700 mb-6">Status: {accountData.status}</p>

    <h2 class="text-xl font-semibold mb-2">Beneficiaries</h2>
    <ul class="space-y-2">
      {accountData.beneficiaries.map((b, i) => (
        <li key={i} class="border rounded p-3">
          <p><strong>Name:</strong> {b.name}</p>
          <p><strong>Relationship:</strong> {b.relationship}</p>
          <p><strong>Percentage:</strong> {b.percentage}%</p>
          <p><strong>Type:</strong> {b.type}</p>
        </li>
      ))}
    </ul>
  </section>
</DefaultLayout>
